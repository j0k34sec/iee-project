generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Announcement {
  id          String   @id @default(cuid())
  title       String
  content     String
  isActive    Boolean  @default(true)
  priority    Int      @default(1) // 1=normal, 2=high, 3=urgent
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CoreTeam {
  id         String   @id @default(cuid())
  name       String
  role       String
  linkedinUrl String?  // Optional LinkedIn profile URL
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Team {
  id           String   @id @default(cuid())
  name         String
  projectTitle String
  status       String   @default("pending") // pending, under-review, approved, rejected
  submittedAt  String
  members      Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactInfo {
  id           String   @id @default(cuid())
  email        String
  discord      String
  socialMedia  String   // JSON string storing array of social media links
  description  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}